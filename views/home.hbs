<!-- ==========    GET   ========== -->
<div class='container'>
    <div class='row'>
        <h1> CRUD</h1>
        <div class='col-md-12'>
            <h1> GET </h1>
            <ul class="list-group">
                {{#each dbEtoileModel }}
                <li>
                    {{ etoile }}
                    {{ type }}
                    {{ distance }}
                    <img src="{{ imgEtoile }}" style="height: 150px; width: 150px" alt="">
                    <p>Publi√© le {{ moment createDate format="DD-MM-YY" }}</p>
                    <!-- ==========    PUT   ========== -->
                  
                       <a href="{{ this.id }}"><button class="btn btn-actu m-1">modifier</button></a>

                    <!-- ==========    DELETE   ========== -->

                    <form action="{{ this.id }}/?_method=DELETE" method="POST">
                        <button class="btn btn-actu m-1" type="submit">Supprimer</button>
                    </form>

                    <!-- ================================= -->
                </li>

                {{/each }}
            </ul>
        </div>
    </div>
</div>

<!-- ==========    POST   ========== -->

<div class='container'>
    <div class='row'>
        <div class='col-md-12'>
            <h1> POST </h1>
            <form action="/" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="">Etoile :</label>
                    <input type="text" name="etoile" class="form-control" id="">
                </div>
                <div class="form-group">
                    <label for="">Type :</label>
                    <input type="text" name="type" class="form-control" id="">
                </div>
                <div class="form-group">
                    <label for="">Distance :</label>
                    <input type="text" name="distance" class="form-control" id="">
                </div>
                <input type="file" name="imgEtoile" required> 
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>

    </div>
</div>

